<div class="container" style="margin: 30px;">
  <div class="row" >
    <div class="col-md-12">

      <h1>コメント一覧</h1>
      <% @comments.each do |comment| %>
      <div class="col-md-12" style="padding: 10px;">
        <%=link_to comment.review.cafe_name , admin_review_path(comment.review.id) %><br>
        <%= comment.created_at.strftime('%Y/%m/%d') %><br>
        <% if comment.user.image.attached? %>
          <%= image_tag comment.user.image, class: "rounded-circle", style: "width: 50px; height: 50px;" %>
        <% else %>
          <%= image_tag 'no_image.jpg', class: "rounded-circle", style: "width: 50px; height: 50px;" %>
        <% end %>
        <%= link_to comment.user.user_name , admin_user_path(comment.user.id) %>
        <%= comment.comment %><br>
        <%= link_to '編集', edit_admin_comment_path(comment.id) %>
        <%= link_to '削除', admin_comment_path(comment.id), method: :delete , "data-confirm" => "本当に削除しますか？" %>
      </div>
      <% end %>
    </div>
  </div>
</div>