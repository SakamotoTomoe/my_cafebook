<div class="container" style="margin: 30px;">
  <div class="row" >
    <div class="col-md-4">

      <h1>ユーザー詳細</h1>
      <% if @user.image.attached? %>
        <%= image_tag @user.image,size: '200×200' %><br>
      <% else %>
        <%= image_tag 'no_image',size: '200×200' %><br>
      <% end %>

      <%= @user.user_name %><br>
      <%= @user.email %><br>
      <%= @user.introduction %><br>
      <% if @user.is_deleted == false %>
        有効<br>
      <% else %>
        退会<br>
      <% end %>

      <%= link_to '編集', edit_admin_user_path(@user.id) %>

    </div>
    <div class="col-md-8">

      <h2>投稿一覧</h2>
      <% @reviews.each do |review| %>
        <%= image_tag review.get_image(200,200) %><br>
        <%= review.created_at.strftime('%Y/%m/%d') %><br>
        <table>
          <tr>
            <th>店舗名</th><td><%= review.cafe_name %></td>
          </tr>
          <tr>
            <th>住所</th><td><%= review.address %></td>
          </tr>
          <tr>
            <th>営業時間</th><td><%= review.opening_hours %></td>
          </tr>
          <tr>
            <th>定休日</th><td><%= review.day_off %></td>
          </tr>
          <tr>
            <th>レビュー</th><td><%= review.review %></td>
          </tr>
        </table>
        <%= link_to '詳細', admin_review_path(review.id) %>
        <%= link_to '削除', url: admin_review_path(review.id) ,method: :delete %><br>
      <% end %>

      <h2>コメント一覧</h2>
      <% @comments.each do |comment| %>
        <%= link_to comment.review.cafe_name , admin_review_path(comment.review.id) %><br>
        <%= comment.created_at.strftime('%Y/%m/%d') %>
        <%= comment.comment %><br>
      <% end %>
    </div>
  </div>
</div>