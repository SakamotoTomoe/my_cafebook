<div class="container" style="margin: 30px;">
  <div class="row" >
    <div class="col-md-12">

      <h1>ユーザー一覧</h1>

        <table>
          <thead>
            <tr>
              <th>ユーザーネーム</th>
              <th>メールアドレス</th>
              <th>退会ステータス</th>
              <th></th>
            </tr>
          </thead>
          <% @users.each do |user| %>
          <tbody>
            <tr>
              <td><%= link_to user.user_name, admin_user_path(user.id) %></td>
              <td><%= user.email %></td>
              <td>
                <% if user.is_deleted == false %>
                  有効<br>
                <% else %>
                  退会<br>
                <% end %>
              </td>
              <td><%= link_to '編集', edit_admin_user_path(user.id) %></td>
            </tr>
          </tbody>
          <% end %>
        </table>
    </div>
  </div>
</div>
