<div class="container" style="margin: 30px;">
  <div class="row" >
    <div class="col-md-8">

      <h1>ユーザー編集</h1>
      <%= form_with model: @user, url: admin_user_path(@user.id), method: :patch do |f| %>
        <table>
        <tr>
          <th>ユーザーネーム</th><td><%= f.text_field :user_name %></td>
        </tr>
        <tr>
          <th>メールアドレス</th><td><%= f.text_field :email %></td>
        </tr>
        <tr>
          <th>自己紹介</th><td><%= f.text_area :introduction %></td>
        </tr>
        <tr>
          <th>退会ステータス</th>
          <td>
            <%= f.radio_button :is_deleted, true %>
            <%= f.label :is_deleted, '退会', value: true %>
            <%= f.radio_button :is_deleted, false %>
            <%= f.label :is_deleted, '有効', value: false %>
          </td>
        </tr>
        </table>
        <%= f.submit '更新' %>
      <% end %>
    </div>
  </div>
</div>