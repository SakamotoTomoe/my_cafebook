<div class="container" style="margin: 30px;">
  <div class="row" >
    <div class="col-md-8">
      <h1>ユーザ情報編集</h1>

      <%= form_with model: @user, url:  user_path(current_user), method: :patch do |f| %>
      <table>
        <tr>
          <th>アイコン</th><td><%= f.file_field :image, accept: "image/*" %></td>
        </tr>
        <tr>
          <th>ユーザーネーム</th><td><%= f.text_field :user_name %></td>
        </tr>
        <tr>
          <th>メールアドレス</th><td><%= f.text_field :email %></td>
        </tr>
        <tr>
          <th>自己紹介</th><td><%= f.text_area :introduction %></td>
        </tr>
      </table>
        <%= f.submit '更新' %>
      <% end %>
    </div>
  </div>
</div>