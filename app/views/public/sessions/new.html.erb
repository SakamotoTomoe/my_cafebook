<div class="container">
  <div class="row">
    <div class="col-md-2 col-md-offset-5">
      <h2>ログイン</h2>

      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="field">
          <%= f.label :メールアドレス %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
        </div>

        <div class="field">
          <%= f.label :パスワード %><br />
          <%= f.password_field :password, autocomplete: "current-password" %>
        </div>

        <% if devise_mapping.rememberable? %>
          <div class="field">
            <%= f.check_box :remember_me %>
            <%= f.label :パスワードをお忘れの方はこちら %>
          </div>
        <% end %>

        <div class="actions">
          <%= f.submit "ログイン", class:"btn btn-sm btn-success" %>
        </div>
      <% end %>

      会員登録がお済でない方は
      <%= link_to "こちら", new_user_registration_path %>
      から会員登録を行ってください。
    </div>
  </div>
</div>
