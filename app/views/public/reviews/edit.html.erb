<div class="container" style="margin: 30px;">
  <div class="row" >
    <div class="col-md-12">

      <h1>レビュー編集</h1>

      <%= form_with model: @review, url: review_path(@review.id), method: :patch do |f| %>
        <table>
          <tr>
            <th style="width: 150px;">カフェ画像</th><td><%= f.file_field :image, accept: "image/*", multiple: true %></td>
          </tr>
          <tr>
            <th>店舗名</th><td><%= f.text_field :cafe_name %></td>
          </tr>
          <tr>
            <th>住所</th><td><%= f.text_field :address %></td>
          </tr>
          <tr>
            <th>営業時間</th><td><%= f.text_area :opening_hours , style: "width:400px; height: 80px;" %></td>
          </tr>
          <tr>
            <th>定休日</th><td><%= f.text_field :day_off %></td>
          </tr>
          <tr>
            <th>レビュー</th><td><%= f.text_area :review , style: "width:400px; height: 100px;" %></td>
          </tr>
          <tr>
            <th>こだわり</th><td><%= f.collection_check_boxes :keyword_ids, @keywords, :id, :keyword %></td>
          </tr>
        </table>
        <%= f.submit '更新' %>
      <% end %>

    </div>
  </div>
</div>