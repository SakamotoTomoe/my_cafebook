<h1>レビュー一覧</h1>
<% @reviews.each do |review| %>
  <%= review.cafe_name %><br>
  <%= review.address %><br>
  <%= review.opening_hours %><br>
  <%= review.day_off %><br>
  <%= review.review %><br>
  <%= review.keywords %><br>
  <%= form_with model: @comments, url: comments_path, method: :post do |f| %>
    <%= f.text_area :comment, {include_blank: 'コメントを入力してください'} %>
    <%= f.submit '送信' %><br>
  <% end %>
  <%= review.comments %><br>
<% end %>